@model IEnumerable<DatLich.Models.news>
@{
    ViewBag.Title = "Tâm An Beauty - Tin tức";
    ViewBag.button = "Đặt lịch hẹn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main>
    <div class="page-section">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    if (item.isActive == true)
                    {
                        <div class="col-md-6 col-lg-4 py-3">
                            <a href="~/News/Detail/@item.id">
                                <div class="card-blog">
                                    <div class="header">
                                        <img src="@item.image" height="80px" width="80px" alt="">

                                        <div class="entry-footer">
                                            <div class="post-author">by @item.accountAD.staff.fullName</div>
                                            <a href="#" class="post-date">@item.dateCreate</a>
                                        </div>
                                    </div>
                                    <div class="body">
                                        <div class="post-title"><a href="~/News/Detail/@item.id">@item.newsTitle</a></div>
                                        <div class="post-excerpt">@item.detail</div>
                                    </div>

                                </div>
                            </a>
                           
                        </div>
                    }

                }

            </div>
        </div>



        <div class="col-12 mt-5">
            <nav aria-label="Page Navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item active" aria-current="page">
                        <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>

    </div>
</main>

