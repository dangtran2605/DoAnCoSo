@model DatLich.Models.booking


<main>
    <div class="card col-md-10" style="margin:0px 100px ">
        <form action="~/Booking/AppointmentDetails/@Model.id" method="get" enctype="multipart/form-data">

            <div class="row">
                <div class="col-md-6">
                    <div class="form-outline mb-4">
                        <label class="form-label" for="inPutName">Full Name</label>
                        <input type="text" id="inPutName" name="fullName" value="@Model.fullName" class="form-control form-control-lg" disabled />
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label" for="inPhone">Phone</label>
                        <input type="tel" id="inPhone" name="phone" value="@Model.phone" class="form-control form-control-lg" disabled />
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label" for="inMail">Email</label>
                        <input type="email" id="inMail" name="email" value="@Model.email" class="form-control form-control-lg" disabled />
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label" for="inAdr">Address</label>
                        <input type="tel" id="inAdr" name="address" value="@Model.address" class="form-control form-control-lg" disabled />
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label" for="inpeo">People</label>
                        <input type="number" id="inpeo" name="people" value="@Model.people" class="form-control form-control-lg" disabled />
                    </div>

                    <div class="form-outline mb-4">
                        <label for="date" class="form-label">Check In</label>
                        <input id="date" name="dateCheckIn" value="@Model.dateCheckIn" type="text" class="form-control form-control-lg" disabled />

                    </div>
                </div>
                <div class="col-md-6 ">
                    <div class="card-group">
                        <div class="card-body">
                            <div class="container">
                                @Html.Action("ListServiceByIdBooking", new { id = Model.id })
                            </div>

                        </div>

                    </div>

                </div>
            </div>
            <div class="row">
                <div class="form-outline " style="margin:20px 10px">
                    <a href="~/" class="btn btn-outline-primary">Back to home page</a>
                </div>
                </div>
            </div>
            <
        </form>
</div>

</main>