@model IEnumerable<DatLich.Models.service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main>
    <div class="page-section">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    if (item.isActive == true)
                    {
                        <div class="col-md-6 col-lg-4 py-3">
                            <a href="~/Service/Detail/@item.id">
                                <div class="card-blog " style="width: 90%; height:90%">


                                    @if (@item.idSale != null)
                                    {
                                        <div class="header">

                                            <p style="margin-top:-20px">@item.sale.discount / </p>
                                            <p style="margin-top:-10px">Giá gốc: <span class="text-primary">@item.price VND</span> </p>
                                            <div class="avatar bg-white" style=";left:210px; top:-110px;width:30%;height:15%">
                                                <img src="~/Models/Image/hot-deal.png" alt="">
                                            </div>

                                            <img class="card-img-top" style="margin:-80px 0px;width: 100%; height:100%" src="@item.image" alt="">
                                        </div>
                                        <div class="entry-footer" style="margin-top: 60px">
                                            <div class="post-author">
                                                @if (item.idCategory != null)
                                                {
                                                    <a href="#">@item.categoryService.categoryName  </a>
                                                }
                                            </div>
                                            <div class="post-title">
                                                <a href="~/Service/Detail/@item.id">@item.serviceName</a>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            Chỉ còn: <h3><a href="#" style="margin-bottom:5px" class="mai-cart text-danger">@item.priceSale </a></h3>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="header">

                                            <img class="card-img-top" style="margin-top: 30px" src="@item.image" alt="">
                                        </div>
                                        <div class="entry-footer">
                                            <div class="post-author">
                                                @if (item.idCategory != null)
                                                {
                                                    <a href="#">@item.categoryService.categoryName  </a>
                                                }
                                            </div>
                                            <div class="post-title">
                                                <a href="~/Service/Detail/@item.id">@item.serviceName</a>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <h3><a href="#"  class="mai-cart">@item.priceSale </a></h3>
                                        </div>
                                    }






                                </div>
                            </a>

                            
                        </div>
                    }
                }
            </div>

        </div>
    </div>
</main>

