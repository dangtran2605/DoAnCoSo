@model DatLich.Models.accountAD

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="page-section features" style="margin: 100px 10px">
        <h4>Create Account</h4>
        <form action="~/Admin/Account/Create" method="post" enctype="multipart/form-data">

            <div class="col-md-6 mb-5">
                <p class="text-danger">
                    @TempData["error"]
                </p>
            </div>
            <div class=" col-md-7 mb-4">
                <label class="form-label" for="inputUName">UserName</label>
                <input type="text" id="inputUName" name="userName" class="form-control form-control-lg" />


            </div>
            <div class="col-md-7 mb-4">
                <label class="form-label" for="inputPass">PassWord</label>
                <input type="password" id="inputPass" name="passWord" class="form-control form-control-lg" />

            </div>
            <div class="col-md-7 mb-4">
                <label class="form-label" for="conPas">Confirm PassWord</label>
                <input type="password" id="conPas" name="confirmPassword" class="form-control form-control-lg" />

            </div>

            <div class="row">
                <div class="col-md-6 mb-4">
                    @Html.Action("GetStaff", "Tool")
                </div>
                <div class="form-check col-md-6 mb-4">

                    <input type="checkbox" class="form-check-input" name="IsActive" value="true" id="InIsA">
                    <label for="InIsA">IsActive</label>
                </div>
            </div>
            <div class="col-md-6 mb-4" , style="margin: 10px 10px">
                <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
            </div>


        </form>
    </div>
</main>
