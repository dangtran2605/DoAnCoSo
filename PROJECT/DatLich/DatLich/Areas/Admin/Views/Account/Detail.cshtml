@model DatLich.Models.accountAD 
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main>

    <div class="page-section features" style="margin: 100px 10px">
        <h4>Detail Account</h4>
        @using (Html.BeginForm("Detail", "Account", FormMethod.Get, new { @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class=" mb-4">
                <label class="form-label" for="inputUName">UserName</label>
                <input type="text" id="inputUName" name="userName" value="@Model.userName" disabled class="form-control form-control-lg" />


            </div>
            <div class="mb-4">
                <label class="form-label" for="inputPass">PassWord</label>
                <input type="text" id="inputPass" name="passWord" value="@Model.passWord" class="form-control form-control-lg" disabled />

            </div>
            <div class="row">
                <div class="col form-check" style="width:20%">
                <label for="NameStaff">Staff Name</label>
                <input type="text" id="NameStaff" value="@Model.staff.fullName" class="form-control form-control-lg" disabled />
            </div>

            <div class="col form-check" style="width:20%">
                <label for="InIsA">IsActive</label>
                <input type="text" id="conPas" value="@Model.isActive.ToString()" class="form-control form-control-lg" disabled />

            </div>
            </div>
            

            <div class="col-md-6 mb-4" , style="margin: 10px 10px">
                <a href="~/Admin/Account" class="btn btn-outline-primary">Back</a>
                <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
            </div>
        }
    </div>
</main>

