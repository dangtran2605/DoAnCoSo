@model DatLich.Models.sale
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="page-section features" style="margin: 100px 10px">
        @using (Html.BeginForm("Detail", "Seller", FormMethod.Get, new { @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <h2>Detail / <a type="submit" style="margin: 10px 5px;width:10%" class="btn btn-lg btn-outline-primary btn-block" href="~/Admin/Seller/Index">Back to list</a></h2>
            <div class="form-outline md-4">
                <label for="dis">Discount</label>
                <input class="form-control" id="dis" value="@Model.discount" type="text" disabled />
            </div>
            <hr />
            <div class="form-outline md-4">
                <label for="num">Is Numble</label>
                <input class="form-control" id="num" value="@Model.isNumble" type="text"  disabled />
            </div>
            <hr />
            <div class="form-outline md-4" style="margin: 10px 10px">
                <img src="@Model.image" height="100px" width="100px" class="mai-at-circle" />
            </div>
            <hr />
            <div class="form-check col-1" style="margin: 20px 0px">

                <label for="st">Status</label>
                <textarea class="form-control" id="st" type="text" rows="1" disabled>@Model.status</textarea>

            </div>
            <div class="form-group">

                <div class="col-md-offset-2 col-md-10">
                    
                    
                </div>
            </div>


        }
    </div>
</main>
